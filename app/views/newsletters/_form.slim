h5.newsletter-intro= t('newsletter.get_news')

= simple_form_for new_newsletter, html: { class: 'newsletter-form' }  do |f|

  = f.input      :email,
                 label: false,
                 placeholder: I18n.t('newsletter.email'),
                 required: true

  .newsletter-submit
    = f.button :submit, I18n.t('newsletter.submit'),
                        id: 'newsletter_submit'

